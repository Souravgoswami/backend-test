<div class="container">
  <nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="https://jalappeno.pl">
        <%= image_tag "jalappeno.svg", width: 112, height: 28 %>
      </a>

      <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">
        <%= link_to "Home", root_path, class: "navbar-item" %>

        <%= link_to "Github", "https://github.com/Jalappeno-apps/backend-test", class: "navbar-item" %>

        <div class="navbar-item has-dropdown is-hoverable">
          <a class="navbar-link">
            More
          </a>

          <div class="navbar-dropdown">
            <%= link_to "Makeups", makeups_path, class: "navbar-item" %>
            <a class="navbar-item">
              Jobs
            </a>
            <a class="navbar-item">
              Contact
            </a>
            <hr class="navbar-divider">
            <a class="navbar-item">
              Report an issue
            </a>
          </div>
        </div>
      </div>

      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
          <% if user_signed_in? %>
            <%= current_user.email %>&nbsp;
            <%= link_to destroy_user_session_path, method: :delete, class: "button is-danger" do %>
              <strong>Log Out</strong>
            <% end %>
          <% else %>
            <%= link_to new_user_registration_path, class: "button is-primary" do %>
              <strong>Sign up</strong>
            <% end %>
            <%= link_to "Sign In", new_user_session_path, class: "button is-light" %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>
</div>
